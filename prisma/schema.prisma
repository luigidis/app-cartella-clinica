generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Paziente {
  id Int @id @default(autoincrement())
  nome String
  cognome String
  dataNascita DateTime
  codiceFiscale String? @unique
  diagnosi String?
  note String?
  createdAt DateTime @default(now())
}